<% include ./partials/header.ejs %>

<div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
    <div class="w-full sm:w-[80vw] md:w-[60vw] lg:w-[35vw] xl:w-[30vw] bg-white px-6 py-10 rounded-[25px]">
        <img src="/images/logo.svg" alt="" class="w-10 h-10 mx-auto">
        <h1 class="text-3xl mt-1 tracking-tighter text-center font-semibold text-zinc-700 capitalize leading-none">
            Welcome to Pinterest
        </h1>
        <p class="inline-block text-xl text-center w-full mt-4">Find new ideas to try</p>
        <form action="/register" method="post" class="mt-4">

            <!-- Email -->
            <label class="inline-block mt-1">Email Address</label>
            <input class="border-2 rounded-full block mt-4 w-full px-4 py-2 text-sm" type="email" name="email" placeholder="Email">

            <!-- Username -->
            <label class="inline-block mt-1">Username</label>
            <input class="border-2 rounded-full block mt-4 w-full px-4 py-2 text-sm" type="text" name="username" placeholder="Username">

            <!-- Contact -->
            <label class="inline-block mt-1">Contact</label>
            <input class="border-2 rounded-full block mt-4 w-full px-4 py-2 text-sm" type="number" name="contact" placeholder="Contact">

            <!-- Password -->
            <label class="inline-block mt-1">Password</label>
            <input class="border-2 rounded-full block mt-4 w-full px-4 py-2 text-sm" type="password" name="password" placeholder="Password">

            <input class="border-2 block mt-1 w-full px-4 py-2 bg-red-600 text-white rounded-full text-sm" value="Create New Account" type="submit">

            <h1 class="text-center font-semibold mt-1">OR</h1>

            <!-- Google Button -->
            <button class="flex border-2 mt-4 w-full px-4 py-2 justify-center gap-4 shadow bg-white text-black rounded-full text-sm">
                <img src="/images/googleicon.svg" class="w-6" alt="">
                Continue With Google
            </button>
            <p class="text-xs font-semibold text-zinc-500 mx-auto w-3/4 mt-7 text-center">
                By continuing, you agree to Pinterest's <strong class="text-black font-bold">Terms of Service</strong> and acknowledge that you've read our <strong class="text-black font-bold">Privacy Policy.</strong>
                <strong class="text-black font-bold">Notice at collection.</strong>
            </p>

            <a href="/" class="inline-block text-sm font-semibold text-zinc-800 text-center w-full mt-1">Already a member? Log In</a>

        </form>
    </div>
</div>

<% include ./partials/footer.ejs %>
