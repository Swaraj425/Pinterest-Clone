<% include ./partials/header.ejs %>
    <div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">
        <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
            <input type="file" name="image">
        </form>

        <!-- Profile Section -->
        <div class="prof-details flex flex-col items-center mt-20">
            <div class="relative">
                <span id="uploadicon" class="hover:cursor-pointer w-10 h-10 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-200">
                    <i class="text-zinc-700 ri-pencil-line"></i>
                </span>
                <div class="w-32 h-32 bg-zinc-500 rounded-full overflow-hidden">
                    <img src="/images/uploads/<%= user.profileImage %>" alt="" class="w-full h-full object-cover">
                </div>
            </div>

            <h1 class="tex-3xl mt-5 font-semibold">@ <%= user.username %></h1>
            <!-- <h3 class="text-md mt-2 ">@Username</h3> -->
            <a href="/edit" class=" mt-5 px-7 py-2 bg-zinc-500 rounded-full text-sm">Edit</a>
            <a href="/add" class="px-10 py-2 rouded-lg bg-black text-xs font-semibold mt-10">Create Post</a>
        </div>

        <!--  Post Section -->
        <div class="cards flex flex-wrap gap-10 px-10 mt-10">
            <div>
                <div class="w-52 h-52 bg-zinc-400 rounded-lg overflow-hidden">
                    <img src="/images/uploads/<%= user?.posts[0]?.image %>" alt="" class="w-full h-full object-cover">
                </div>
                <a href="/show/posts" class=" inline-block text-xl font-semibold mt-4">Your Uploaded Image</a>
                <h5 class="text-sm font-medium opacity-60"><%= user.posts.length %>Pin</h5>
            </div>
        </div>
    </div>

    <script>
        document.querySelector('#uploadicon').addEventListener("click", function(){
            document.querySelector('#uploadform input').click();
        })
        document.querySelector('#uploadform input').addEventListener('change', function(){
            document.querySelector('#uploadform').submit();
        })
    </script>

<% include ./partials/footer.ejs %>