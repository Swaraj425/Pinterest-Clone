<% include ./partials/header.ejs %>


  <div class="w-full h-screen flex bg-zinc-300  items-center justify-center">
      <div class="w-[90vw] sm:w-[40vw] md:w-[30vw] bg-white px-8 sm:px-10 md:px-16 py-10 rounded-[25px]">
        <img src="/images/logo.svg" alt="" class="w-12 h-12 mx-auto">
        <h1 class="text-2xl sm:text-3xl mt-5 tracking-tighter text-center font-semibold text-zinc-700 capitalize leading-none">Welcome to Pinterest</h1>
        <form action="/login" method="post" class="mt-2">

          <label class="inline-block mt-5">Username</label>
          <input class="border-2 rounded-full block mt-4 w-full px-3 py-2" type="text" name="username" placeholder="Username">

          <label class="inline-block mt-5">Password</label>
          <input class="border-2 rounded-full block mt-4 w-full px-3 py-2" type="password" name="password" placeholder="Password">

          <a href="#" class="mt-4 font-semibold text-blue-700 inline-block">Forgot Password?</a>

          <input class="border-2 block mt-5 w-full px-3 py-2 bg-red-600 text-white rounded-full" value="Login" type="submit">

          <h1 class="text-center font-semibold mt-2">OR</h1>

          <!-- Facebook Button -->
          <Button class="border-2 block w-full px-3 py-2 bg-blue-500 text-white rounded-full" type="submit">
            <i class="fa-brands fa-facebook" style="color: white; font-size: 25px; margin-right: 10px;"></i>Continue with Facebook
          </Button>
          
          <!-- Google Button -->
          <button class="flex border-2 mt-1 w-full px-3 justify-center py-2 gap-4 shadow bg-white text-black rounded-full" type="submit">
            <img src="/images/googleicon.svg" class="w-6" alt="">
            Continue With Google
          </button>
          
          <p class="text-xs font-semibold text-zinc-500 mx-auto w-3/4 mt-7 text-center">By continuing, you agree to Pinterest's <strong class="text-black font-bold">Terms of Service</strong> and acknowledge that you've read our <strong class="text-black font-bold">Privacy Policy.</strong><strong class="text-black font-bold">Notice at collection.</strong></p>
          
          <a href="/register" class="inline-block text-sm font-semibold text-zinc-800 text-center w-full mt-5">Not on Pinterest yet? Sign up</a>
        
        </form>
      </div>
  </div>

<% include ./partials/footer.ejs %>
